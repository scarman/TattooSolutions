@using Microsoft.AspNet.Identity
@if (Request.IsAuthenticated)
{
    using (Html.BeginForm("LogOff", "Account", new { area = "" }, FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
    {
        @Html.AntiForgeryToken()
    }
    <li class="dropdown">
        <a href="" class="dropdown-toggle" data-toggle="dropdown">@FontAwesomeIconSet.User.FixedWidth().Html Hello @CurrentUser.Nick! @FontAwesomeIconSet.CaretDown.FixedWidth().Html</a>
        <ul class="dropdown-menu">
            <li><a href=@Url.Action("UpdateProfile","Account", new {area = ""})>@FontAwesomeIconSet.Lock.FixedWidth().Html Update Profile</a></li>
            <li><a href=@Url.Action("Manage","Account", new {area = ""})>@FontAwesomeIconSet.Lock.FixedWidth().Html Change Password</a></li>
            <li class="divider"></li>
            <li><a href=@Url.Action("Index","Element", new {area = ""})>@FontAwesomeIconSet.Spinner.FixedWidth().Html My Elements</a></li>
            <li><a href=@Url.Action("Create","Element", new {area = ""})>@FontAwesomeIconSet.Subscript.FixedWidth().Html New Element</a></li>
            <li class="divider"></li>
            <li><a href="javascript:document.getElementById('logoutForm').submit()">@FontAwesomeIconSet.PowerOff.FixedWidth().Html Log off</a></li>
        </ul>
    </li>
}
else
{
    <li>
        <ul class="nav navbar-nav navbar-right">
            <li><a href=@Url.Action("Register", "Account", new { area = "" }) id="registerLink">@FontAwesomeIconSet.PencilSquareO.FixedWidth().Html Register</a></li>
            <li><a href=@Url.Action("Login", "Account", new { area = "" }) id="loginLink">@FontAwesomeIconSet.PowerOff.FixedWidth().Html Log in</a></li>
        </ul>
    </li>
}
